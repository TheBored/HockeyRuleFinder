<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/leagueSpinnerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose League"
        android:textSize="16sp"
        android:layout_margin="12dp"
        android:paddingTop="4dp"
        android:textColor="?attr/textColorMain" />

    <Spinner android:id="@+id/leagueSpinner"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@+id/leagueSpinnerText"
        android:layout_alignParentRight="true"/>

    <Switch android:id="@+id/themeSwitch"
        android:text="@string/enable_dark_theme"
        android:checked="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_below="@+id/leagueSpinnerText"/>

</RelativeLayout>

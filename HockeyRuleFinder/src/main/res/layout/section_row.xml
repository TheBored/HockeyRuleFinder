<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sectionRow"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingLeft="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="?attr/textSizeRowMainContent"
        android:text="@string/placeholder_section_title"
        android:id="@+id/txtSectionName"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:textColor="?attr/textColorMain" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/placeholder_section_id_label"
        android:id="@+id/txtSectionRange"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"/>
</RelativeLayout>
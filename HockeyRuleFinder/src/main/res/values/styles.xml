<resources>
    <attr name="cardBGColor" format="reference"/>
    <attr name="cardFGColor" format="reference"/>

    <attr name="listRowBGColor" format="reference"/>
    <attr name="listRowDividerColor" format="reference"/>
    <attr name="listRowShadow" format="reference" />
    <attr name="navDrawerItem" format="reference" />
    <attr name="sliderBorderDrawable" format="reference" />

    <attr name="textSizeRowMainContent" format="dimension" />
    <attr name="textSizeRuleTitle" format="dimension" />
    <attr name="textColorMain" format="reference" />

    <attr name="simpleRectBG" format="reference" />
    <attr name="listRowDivider" format="reference" />

    <!-- Base application theme. -->
    <style name="HRFDarkTheme" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="cardBGColor">@color/darkCardBGColor</item>
        <item name="cardFGColor">@color/darkCardFGColor</item>
        <item name="listRowBGColor">@color/darkListRowColor</item>
        <item name="listRowDividerColor">@color/darkListRowDivider</item>
        <item name="listRowShadow">@drawable/image_shadow_dark</item>
        <item name="navDrawerItem">@drawable/nav_drawer_item_dark</item>
        <item name="sliderBorderDrawable">@drawable/slider_border_dark</item>

        <item name="textSizeRowMainContent">20sp</item>
        <item name="textSizeRuleTitle">22sp</item>
        <item name="textColorMain">@android:color/white</item>

        <item name="simpleRectBG">@drawable/simple_rect_dark</item>
        <item name="listRowDivider">@drawable/padded_divider_dark</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/action_bar_bg</item>
    </style>

    <!-- Optional light application theme. -->
    <style name="HRFLightTheme" parent="android:Theme.Holo.Light">
        <item name="cardBGColor">@color/lightCardBGColor</item>
        <item name="cardFGColor">@color/lightCardFGColor</item>
        <item name="listRowBGColor">@color/lightListRowColor</item>
        <item name="listRowDividerColor">@color/lightListRowDivider</item>
        <item name="listRowShadow">@drawable/image_shadow_light</item>
        <item name="navDrawerItem">@drawable/nav_drawer_item_light</item>
        <item name="sliderBorderDrawable">@drawable/slider_border_light</item>

        <item name="textSizeRowMainContent">20sp</item>
        <item name="textSizeRuleTitle">22sp</item>
        <item name="textColorMain">@android:color/primary_text_light</item>

        <item name="simpleRectBG">@drawable/simple_rect_light</item>
        <item name="listRowDivider">@drawable/padded_divider_light</item>
    </style>

    <style name="HRFTitle">
        <item name="android:textSize">?attr/textSizeRuleTitle</item>
        <item name="android:textColor">?attr/textColorMain</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>
